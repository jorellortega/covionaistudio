# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Example:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9... (for migrations)

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Example:
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products and prices in Stripe Dashboard)
# Get these from Stripe Dashboard > Products > [Product Name] > Pricing section
STRIPE_PRICE_CREATOR=price_your_creator_price_id_here
STRIPE_PRICE_STUDIO=price_your_studio_price_id_here
STRIPE_PRICE_PRODUCTION=price_your_production_price_id_here

# App URL for redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Example:
# STRIPE_SECRET_KEY=sk_test_51...
# STRIPE_PUBLISHABLE_KEY=pk_test_51...
# STRIPE_WEBHOOK_SECRET=whsec_... (get from: stripe listen --print-secret)
# STRIPE_PRICE_SOLO=price_1234567890abcdef
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
